// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int         @id @default(autoincrement())
  username              String
  password              String
  isAdmin               Boolean     @default(false)
  favorite_continent    Continent
  preferred_temperature Temperature
  visits                Visit[]
  relation1             Couple[]    @relation("User1Relation")
  relation2             Couple[]    @relation("User2Relation")
}

model Country {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  continent   Continent
  temperature Temperature
  is_open     Boolean     @default(true)
  visits      Visit[]
}

model Visit {
  id         Int     @id @default(autoincrement())
  user_id    Int
  user       User    @relation(fields: [user_id], references: [id])
  country_id Int
  country    Country @relation(fields: [country_id], references: [id])
  date       String
  rating     Int
}

model Couple {
  id       Int  @id @default(autoincrement())
  user1    User @relation("User1Relation", fields: [user1_id], references: [id])
  user1_id Int
  user2    User @relation("User2Relation", fields: [user2_id], references: [id])
  user2_id Int

  @@unique([user1_id, user2_id])
}

enum Continent {
  Africa
  Antarctica
  Asia
  Europe
  North_America
  Oceania
  South_America
}

enum Temperature {
  Cold
  Hot
  Mild
}
